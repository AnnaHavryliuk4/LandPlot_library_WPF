<Window x:Class="Lab4_Library__WPF.SettlementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settlement" Height="400" Width="600">
    <Grid>
        <ListBox x:Name="LandPlotListBox" HorizontalAlignment="Left" Height="200" VerticalAlignment="Top" Width="400" Margin="10,10,0,0" SelectionChanged="LandPlotListBox_SelectionChanged"/>
        <Button Content="Add Land Plot" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="420,10,0,0" Click="AddLandPlot_Click"/>
        <Button x:Name ="EditLandPlot" Content="Edit Land Plot" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="420,50,0,0" Click="EditLandPlot_Click" IsEnabled="False"/>
        <Button Content="Save and Close" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="10,220,0,0" Click="SaveAndClose_Click"/>
        <Button Content="Cancel and Close" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="170,220,0,0" Click="CancelAndClose_Click"/>
    </Grid>
</Window>
